
@{
    ViewBag.Title = "Register";
}

<h3 style="margin-left:32.5%">Hello User Welcome To Registration Page</h3>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        #reg_form{
            background-color:lightslategray
        }
    </style>
    <body>
        <div class="container">
            <form id="reg_form" style="width:85%;margin-left:6%;">
                <center>  <h1>  Registeration Form</h1> </center>

                <label style="margin-left:35%;"><b>Username</b></label>
                <input type="text" style="height: 45px;width:240px" placeholder="Enter Username" name="uname" required><br /><br />

                <label style="margin-left:35.2%;"><b>Password</b></label>
                <input type="password" style="height: 45px; width: 240px" placeholder="Enter Password" name="psw" required><br /><br />

                <label style="margin-left:35.2%;" for="birthday">Birthday</label>
                <input type="date" style="margin-left: 0.8%; height: 45px; width: 240px" id="birthday" name="birthday" required><br /><br />

                <label style="margin-left:35.2%;"><b>Gender</b></label>
                <select style="margin-left: 1.55%; height: 45px; width: 240px" required>
                    <option value="Gender">Please Select</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select><br /><br />

                <label style="margin-left:35.2%;" for="email"><b>Email</b></label>
                <input type="text" style="margin-left: 2.70%; height: 45px; width: 240px" placeholder="Enter Email" name="email" required><br /><br />
                <button type="submit" style="margin-left: 46%; border-radius: 15px 15px;height:45px;width:110px;background-color:lawngreen;color:black">Register</button>

            </form>
        </div>
    </body>
</html>