
@{
    ViewBag.Title = "Pass";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<body>
    <div class="container">
        <form id="reg_form">
            <center>  <h1>Forget Password</h1> </center>
            <label  style="margin-left:35%;"><b>E-Mail</b></label>
            <input type="text" id="email" style="height: 45px;width:240px" placeholder="Enter Email" name="uname" required><br /><br />
            <button type="button" id="submit_btn" onclick="ValidateEmail()" style="margin-left: 46%; border-radius: 15px 15px;height:45px;width:110px;background-color:lawngreen;color:black">Send Mail</button>
            <span id="lblError" style="color:red"></span>
            <script type="text/javascript">
                function ValidateEmail() {
                    var email = document.getElementById("email").value;
                    var lblError = document.getElementById("lblError");
                    lblError.innerHTML = " ";
                    var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
                    if (!expr.test(email)) {
                        lblError.innerHTML = "Invalid email address";
                    }
                }
            </script>
        </form>
        </div>
</body>


